<div class='card'>
  <h5 class='card-header'>
    {{blog.title}}
    {{blog.user.name}}
  </h5>
  <div class='card-body'>

    <p class='card-text'>{{blog.text_content}}</p>
  </div>
</div>

{{#each blog.comments as |comment|}}
  <div class='card'>

    <div class='card-body'>

      <p class='card-text'>{{comment.comment}}</p>
    </div>
  </div>
{{/each}}

<div class='card'>
  <h5 class='card-header'></h5>
  <div class='card-body'>
    <form class='comment-form' id='{{blog.id}}'>
      <div class='form-group w-75 mx-auto'>
        <label for='formGroupExampleInput2'>Comment</label>
        <input type='text' class='form-control' id='comment-text' />
      </div>
      <button class='btn w-75 mx-auto' type='submit'>Submit</button>
    </form>
  </div>
</div>
<script src='../js/comment.js'></script>