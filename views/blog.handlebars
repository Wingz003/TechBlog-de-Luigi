<div class='card'>
 <h5 class='card-header d-flex justify-content-between'>
    <p>{{blog.title}}</p> 
     <div> 
      <span>{{blog.user.name}}</span> 
      <p>{{format_date blog.date_created}}</p>
    </div> 
  </h5>
  <div class='card-body'>

    <p class='card-text'>{{blog.text_content}}</p>
  </div>
</div>

{{#each blog.comments as |comment|}}
  <div class='card'>

    <div class='card-body'>
      <h5 class='d-flex justify-content-between'>
        <p class='card-text'>{{comment.comment}}</p>
         <div class="commentBox"> 
            <span>{{comment.user.name}}</span> 
            <p>{{format_date comment.date}}</p>
         </div> 

      </h5>  
    </div>
  </div>
{{/each}}

<div class='card'>
  <h5 class='card-header'>Add Comment</h5>
  <div class='card-body'>
    <form class='comment-form' id='{{blog.id}}'>
      <div class='form-group w-75 mx-auto'>
        <label for='formGroupExampleInput2'>Comment</label>
        <input type='text' class='form-control' id='comment-text' />
      </div>
      <button class='btn d-block w-75 mx-auto' type='submit'>Submit</button>
    </form>
  </div>
</div>
<script src='../js/comment.js'></script>

